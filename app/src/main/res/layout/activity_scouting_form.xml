<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ScoutingForm">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Pre-Match"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView7"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Title"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <EditText
                        android:layout_width="113dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/editText4" android:layout_weight="1" android:hint="Team #"/>
                <EditText
                        android:layout_width="203dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/editText5" android:hint="Alliance Color" android:layout_weight="1"/>
                <EditText
                        android:layout_width="181dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/editText6" android:hint="Starting Position" android:layout_weight="1"/>
            </LinearLayout>
            <TextView
                    android:text="Autonomous"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/Autonomous"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Title"/>
            <TextView
                    android:text="Cargo Ship Cargo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView21"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/autoCSC" android:layout_weight="1"/>
                <Button
                        android:text="+"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/plusButtonCSC" android:layout_weight="1"
                        android:onClick="incCSC"/>
                <Button
                        android:text="-"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/minusButtonCSC"
                        android:layout_weight="1" android:onClick="decCSC"/>
            </LinearLayout>
            <TextView
                    android:text="Rocket Cargo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView20"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/autoRC" android:layout_weight="1"/>
                <Button
                        android:text="+"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/plusButtonRC" android:layout_weight="1"
                        android:onClick="incRC"/>
                <Button
                        android:text="-"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/minusButtonRC" android:layout_weight="1"
                        android:onClick="decRC"/>
            </LinearLayout>
            <TextView
                    android:text="Rocket Hatches"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView17"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/autoRH" android:layout_weight="1"/>
                <Button
                        android:text="+"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/plusButtonRH" android:layout_weight="1"
                        android:onClick="incRH"/>
                <Button
                        android:text="-"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/minusButtonRH" android:layout_weight="1"
                        android:onClick="decRH"/>
            </LinearLayout>
            <TextView
                    android:text="Cargo Ship Hatches"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView6"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/autoCSH" android:layout_weight="1"/>
                <Button
                        android:text="+"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/plusButtonCSH"
                        android:layout_weight="1" android:onClick="incCSH"/>
                <Button
                        android:text="-"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/minusButtonCSH"
                        android:layout_weight="1" android:onClick="decCSH"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="57dp" android:id="@+id/boolThing">
                <CheckBox
                        android:text="Passed Hab Line?"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/habLine" android:layout_weight="1"/>
            </LinearLayout>
            <TextView
                    android:text="Tele-OP Phase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView16" android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>