<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ScoutingForm">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="248dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/string">
                <TextView
                        android:text="TextView"
                        android:layout_width="159dp"
                        android:layout_height="wrap_content" android:id="@+id/textView12" android:layout_weight="1"/>
                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:text="Name"
                        android:ems="10"
                        android:id="@+id/stringInput" android:layout_weight="1" tools:layout_editor_absoluteX="294dp"/>
            </LinearLayout>
            <TextView
                    android:text="Autonomous"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/Autonomous"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="57dp" android:id="@+id/boolThing">
                <CheckBox
                        android:text="CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/boolInput" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/increment">
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView13" android:layout_weight="1"/>
                <Button
                        android:text="+"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/incrementInput"
                        android:layout_weight="1"/>
                <Button
                        android:text="-"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/decrementInput"
                        android:layout_weight="1"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/counter" android:layout_weight="1"/>
            </LinearLayout>
            <TextView
                    android:text="Tele-OP Phase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView16" android:layout_weight="1"/>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>